<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="software.ilhan.com.realtimemangalaoyunu.ProfileActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/userNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/changePasswordBttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@color/colorAccent"
            android:text="Şifre Değiştir"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/changeEmailBttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@color/colorAccent"
            android:text="E-posta Değiştir"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/signOutBttn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:text="Çıkış Yap"
            android:textAllCaps="false"
            android:textColor="#fff" />


    </LinearLayout>

</RelativeLayout>
